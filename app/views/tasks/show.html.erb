<% content_for :title do %>
業務管理システム　｜　# <%= @task.id %> 詳細画面
<% end %>

<h1>id: <%= @task.id %> の業務内容</h1>

<table class="table table-bordered">
  <tr>
    <th style="width:30%;">#</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>業務名</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>業務内容</th>
    <td><%= @task.content %></td>
  </tr>
</table>



<%= link_to '内容を変更する', edit_task_path(@task), class: 'btn btn-light'  %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？'} , class: 'btn btn-danger'%>