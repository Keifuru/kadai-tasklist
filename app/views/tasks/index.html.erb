<% content_for :title do %>
業務管理システム　｜　トップページ
<% end %>

<h1>業務一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width:10%;">#</th>
        <th style="width:30%;">業務名</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規登録する', new_task_path, class: "btn btn-primary" %>

